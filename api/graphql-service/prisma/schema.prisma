// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @unique @default(uuid())
  name String
  email String @unique
  username String @unique
  password String
  profilePhoto String @default("https://viaroteams.files.wordpress.com/2016/10/perfil-default.png")
  phoneNumber String?
  wallet Float @default(0.0)

  wishlist Wishlist[]

  library Game[]

  admin Admin?

  publisher Publisher?
}

model Publisher {
  id String @id @unique @default(uuid())
  name String @unique
  games_count Int @default(0)

  profilePhoto String @default("https://i.pinimg.com/736x/ec/d9/c2/ecd9c2e8ed0dbbc96ac472a965e4afda.jpg")

  user User @relation(fields: [userId], references: [id])
  userId String @unique

  games Game[]
}


model Wishlist {
  
  User User @relation(fields: [userId], references: [id])
  userId String @id

  games Game[]
}

model Admin {
 
  adminId String @id @unique @default(uuid())

  userId String @unique
  user User @relation(fields: [userId], references: [id])

}

model Game {
  id String @id @unique @default(uuid())
  name String @unique
  description String
  price Float
  released String
  alternative_names String[]
  background_image String
  screenshots String[]

  publisher Publisher @relation(fields: [publisherId], references: [id])
  publisherId String

  platforms Platform[]
 
  genres Genre[]

  users User[]

  wishlists Wishlist[]
 
}


model Genre {
  id Int @id @unique
  name String @unique

  games Game[]
}




model Platform {
  id Int @id @unique
  name String @unique

  games Game[]
}